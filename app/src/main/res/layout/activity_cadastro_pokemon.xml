<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DA0A2D"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#C00000"
            android:title="Cadastrar Pokémon"
            android:titleTextColor="#FFFFFF"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/quadro_branco"
        android:elevation="4dp"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/etNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="monospace"
            android:hint="Nome do Pokémon"
            android:padding="12dp"
            android:textColor="#000000" />/>

        <EditText
            android:id="@+id/etTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="monospace"
            android:hint="Tipo"
            android:padding="12dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etHab1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="monospace"
            android:hint="Habilidade 1"
            android:padding="12dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etHab2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="monospace"
            android:hint="Habilidade 2 (opcional)"
            android:padding="12dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etHab3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="monospace"
            android:hint="Habilidade 3 (opcional)"
            android:padding="12dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/botaoCadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#3F51D7"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:text="Cadastrar Pokémon"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

         </LinearLayout>
    </LinearLayout>
</ScrollView>
